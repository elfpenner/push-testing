<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap= "http://phonegap.com/ns/1.0"
id="nl.deville-internet.app"
version="1.0.0">
        <name>Push testing</name>
        <description>Een testapp om push te testen</description>
        <author email="info@deville-internet.nl" href="http://www.deville-internet.nl">de Ville Internet</author>
	<!-- We'll include the Cordova plugins -->
	<plugin name="phonegap-plugin-push" source="npm"></plugin>


	<feature name="http://api.phonegap.com/1.0/network"/>

        <content src="index.html" />
        <access origin="*" />
        <access origin="http://www.deville-internet.nl/*" launch-external="yes" />
	<platform name="ios">
              <feature name="InAppBrowser">
                <param name="ios-package" value="CDVInAppBrowser" />
              </feature>
                 <icon src="Resources/icons/icon-57.png"  width="57" height="57" />
                 <icon src="Resources/icons/icon-57@2x.png"  width="114" height="114" />
                 <icon src="Resources/icons/icon-72.png"  width="72" height="72" />
                 <icon src="Resources/icons/icon-72@2x.png"  width="144" height="144" />
	        <!-- 6+ -->
	         <icon src="Resources/icons/icon-60@3x.png" height="180" width="180"/>  
	        <!-- iPhone / iPod Touch -->
	   	 <icon src="Resources/icons/icon-60.png" height="60" width="60"/>
	         <icon src="Resources/icons/icon-60@2x.png" height="120" width="120"/> 
		<!-- iPad -->
	         <icon src="Resources/icons/icon-76.png" height="76" width="76"/>
	         <icon src="Resources/icons/icon-76@2x.png" height="152" width="152"/> 
 
	        <!-- Spotlight Icon -->
	         <icon src="Resources/icons/icon-40.png" height="40" width="40"/>
	         <icon src="Resources/icons/icon-40@2x.png" height="80" width="80"/> 
	
	        <!-- iPhone Spotlight and Settings Icon -->
 	         <icon src="Resources/icons/icon-29.png" height="29" width="29"/> 
	         <icon src="Resources/icons/icon-29@2x.png" height="58" width="58"/> 
	        <!-- iPad Spotlight and Settings Icon -->
 	         <icon src="Resources/icons/icon-50.png" height="50" width="50"/> 
                 <icon src="Resources/icons/icon-50@2x.png" height="100" width="100"/>
        </platform>
	<platform name="android">
          <feature name="InAppBrowser">
  	     <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
	  </feature>
              <icon src="res/icon/android/icon.png" density="ldpi" />
              <icon src="res/icon/android/icon.png" density="mdpi" />
              <icon src="res/icon/android/icon.png" density="hdpi" />
              <icon src="res/icon/android/icon.png" density="xhdpi" />
	      <preference name="android-minSdkVersion" value="14" />
         </platform>

	<preference name="orientation" value="portrait" />
        <preference name="Fullscreen" value="false" />
        <preference name="permissions" value="none"/>
         <icon src="icon.png"   />
	<preference name="BackgroundColor" value="0xff7ab030"/>
	
    </widget>
